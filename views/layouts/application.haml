!!! Strict
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    %title
      =audience_name_title(audience_name)
      |
      =theme_token.capitalize.gsub('-',' ')
      | projectName
    %link{:href => rel_path+"stylesheets/core.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => rel_path+"images/favicon.ico", :rel => "shortcut icon"}/
    /[if IE 7]
      %link{:href => rel_path+"stylesheets/ie/7.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    /[if IE 6]
      %link{:href => rel_path+"stylesheets/ie/6.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => rel_path+"javascripts/application.js", :type => "text/javascript"}


  %body{:id => defined?(home_page) ? "home-page" : audience_name, :class => theme_token}

    #page
      #wrapper
        #header

        #body-wrapper
          = yield
          .cl
    = partial :'partials/footer'